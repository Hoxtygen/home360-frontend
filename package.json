{
  "name": "next-fullstack-project",
  "version": "1.3.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "release": "release-it"
  },
  "dependencies": {
    "-": "^0.0.1",
    "@changesets/cli": "^2.26.0",
    "@next-auth/prisma-adapter": "^1.0.5",
    "@next/font": "13.1.1",
    "@prisma/client": "^4.9.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/formidable": "^2.0.5",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/pg": "^8.6.6",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "bcryptjs": "^2.4.3",
    "cloudinary": "^1.33.0",
    "datauri": "^4.1.0",
    "date-fns": "^2.29.3",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "form-data": "^4.0.0",
    "formidable": "3.2.5",
    "joi": "^17.7.0",
    "jose": "^4.11.4",
    "jsonwebtoken": "^9.0.0",
    "mime": "^3.0.0",
    "multer": "^1.4.5-lts.1",
    "next": "13.1.1",
    "next-api-route-middleware": "^1.0.2",
    "next-auth": "^4.18.8",
    "next-connect": "^0.13.0",
    "pg": "^8.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/mime": "^3.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "husky": "^8.0.0",
    "lint-staged": "^13.1.0",
    "prisma": "^4.9.0",
    "release-it": "^15.6.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "lint-staged": {
    "*.(tsx|ts)": "eslint --cache --fix",
    "*": "prettier --write --ignore-unknown"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "infile": "CHANGELOG.md",
        "preset": {
          "name": "conventionalcommits",
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "refactor",
              "section": "Refactor"
            },
            {
              "type": "test",
              "section": "Test"
            },
            {
              "type": "chore",
              "section": "Chore"
            }
          ]
        }
      }
    }
  }
}
